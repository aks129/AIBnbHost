# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Anthropic Claude AI
ANTHROPIC_API_KEY=sk-ant-xxxxx
# Alternative: CLAUDE_API_KEY=sk-ant-xxxxx

# Stripe (Backend)
STRIPE_SECRET_KEY=sk_test_xxxxx

# Stripe (Frontend - must be prefixed with VITE_)
VITE_STRIPE_PUBLIC_KEY=pk_test_xxxxx

# SendGrid Email (Optional)
SENDGRID_API_KEY=SG.xxxxx

# Airbnb OAuth (for account integration)
AIRBNB_CLIENT_ID=your_airbnb_client_id
AIRBNB_CLIENT_SECRET=your_airbnb_client_secret
AIRBNB_REDIRECT_URI=https://yourdomain.com/api/airbnb/callback

# JWT Authentication
JWT_SECRET=your-secure-random-jwt-secret-key-here

# Server Port (Optional - defaults to 5000)
PORT=5000
